{
  "name": "ICC Security Research (Pre-built)",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "../.."
  },

  "containerEnv": {
    "DEBIAN_FRONTEND": "noninteractive",
    "CC": "clang-18",
    "CXX": "clang++-18",
    "ASAN_OPTIONS": "detect_leaks=0",
    "ICC_MCP_ROOT": "${containerWorkspaceFolder}",
    "ICCDEV_DIR": "/opt/iccdev",
    "LD_LIBRARY_PATH": "/opt/iccdev/Build/build/IccProfLib:/opt/iccdev/Build/build/IccXML"
  },

  "postCreateCommand": "bash .devcontainer/dockerfile-build/post-create.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-vscode.cmake-tools",
        "ms-vscode.cpptools",
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ],
      "settings": {
        "python.defaultInterpreterPath": "${containerWorkspaceFolder}/mcp-server/.venv/bin/python",
        "cmake.sourceDirectory": "/opt/iccdev/Build/Cmake",
        "cmake.buildDirectory": "/opt/iccdev/Build/build",
        "terminal.integrated.env.linux": {
          "ASAN_OPTIONS": "detect_leaks=0",
          "LD_LIBRARY_PATH": "/opt/iccdev/Build/build/IccProfLib:/opt/iccdev/Build/build/IccXML"
        }
      }
    },
    "codespaces": {
      "openFiles": [
        "README.md"
      ]
    }
  },

  "forwardPorts": [8000],
  "portsAttributes": {
    "8000": {
      "label": "MCP Web UI",
      "onAutoForward": "notify"
    }
  },

  "mounts": [],
  "runArgs": ["--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined"],
  "remoteUser": "vscode"
}
